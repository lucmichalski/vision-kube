<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openimaj</groupId>
    <artifactId>openimaj-tutorial-parent</artifactId>
		<version>1.4-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<artifactId>tutorial-pdf</artifactId>
	<packaging>jar</packaging>
	<name>Tutorial PDF Rendering Project</name>
	<description>OpenIMAJ tutorial in PDF format</description>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>fopdf.xsl</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>fopdf.xsl</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<escapeString>\</escapeString>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.agilejava.docbkx</groupId>
				<artifactId>docbkx-fop-support</artifactId>
				<version>2.0.14</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<ansi>false</ansi>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.agilejava.docbkx</groupId>
				<artifactId>docbkx-maven-plugin</artifactId>
				<version>2.0.14</version>
				<dependencies>
					<dependency>
						<groupId>docbook</groupId>
						<artifactId>docbook-xml</artifactId>
						<version>4.5</version>
					</dependency>
					<dependency>
						<groupId>org.apache.fop</groupId>
						<artifactId>fop-pdf-images</artifactId>
						<version>1.3</version>
					</dependency>
					<dependency>
						<groupId>org.apache.fop</groupId>
						<artifactId>fop-pdf-images-res</artifactId>
						<version>1.3</version>
						<classifier>res</classifier>
					</dependency>
					<dependency>
						<groupId>pdfbox</groupId>
						<artifactId>pdfbox</artifactId>
						<version>0.7.4-dev</version>
						<classifier>dev</classifier>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>generate-pdf</id>
						<phase>compile</phase>
						<goals>
							<goal>generate-pdf</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<sourceDirectory>${basedir}/target/docbook</sourceDirectory>
					<targetDirectory>${basedir}/target</targetDirectory>
					<includes>tutorial.xml</includes>
					<xincludeSupported>true</xincludeSupported>
					<imgSrcPath>${basedir}/target/docbook/</imgSrcPath>
					<foCustomization>${basedir}/target/classes/fopdf.xsl</foCustomization>
					<bodyFontFamily>LinLibertine</bodyFontFamily>
					<monospaceFontFamily>Inconsolata LGC</monospaceFontFamily>
					<titleFontFamily>OpenSans-CondBold</titleFontFamily>
					<profileCondition>print</profileCondition>
					<useSvg>true</useSvg>
					<fonts>
						<font>
							<name>OpenSans-CondBold</name>
							<style>normal</style>
							<weight>normal</weight>
							<embedFile>${basedir}/src/fonts/OpenSans-CondBold.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/OpenSans-CondBold-metrics.xml</metricsFile>
						</font>
						<font>
							<name>Inconsolata LGC</name>
							<style>normal</style>
							<weight>normal</weight>
							<embedFile>${basedir}/src/fonts/inconsolatalgc.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/inconsolatalgc-metrics.xml</metricsFile>
						</font>
						<font>
							<name>Inconsolata LGC</name>
							<style>normal</style>
							<weight>bold</weight>
							<embedFile>${basedir}/src/fonts/inconsolatalgcbold.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/inconsolatalgcbold-metrics.xml</metricsFile>
						</font>
						<font>
							<name>Inconsolata LGC</name>
							<style>italic</style>
							<weight>normal</weight>
							<embedFile>${basedir}/src/fonts/inconsolatalgcitalic.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/inconsolatalgcitalic-metrics.xml</metricsFile>
						</font>
						<font>
							<name>Inconsolata LGC</name>
							<style>italic</style>
							<weight>bold</weight>
							<embedFile>${basedir}/src/fonts/inconsolatalgcbolditalic.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/inconsolatalgcbolditalic-metrics.xml</metricsFile>
						</font>
						<font>
							<name>LinLibertine</name>
							<style>normal</style>
							<weight>normal</weight>
							<embedFile>${basedir}/src/fonts/LinLibertine_Rah.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/LinLibertine_Rah-metrics.xml</metricsFile>
						</font>
						<font>
							<name>LinLibertine</name>
							<style>normal</style>
							<weight>bold</weight>
							<embedFile>${basedir}/src/fonts/LinLibertine_RBah.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/LinLibertine_RBah-metrics.xml</metricsFile>
						</font>
						<font>
							<name>LinLibertine</name>
							<style>italic</style>
							<weight>bold</weight>
							<embedFile>${basedir}/src/fonts/LinLibertine_RBIah.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/LinLibertine_RBIah-metrics.xml</metricsFile>
						</font>
						<font>
							<name>LinLibertine</name>
							<style>italic</style>
							<weight>normal</weight>
							<embedFile>${basedir}/src/fonts/LinLibertine_RIah.ttf</embedFile>
							<metricsFile>${basedir}/target/fonts/LinLibertine_RIah-metrics.xml</metricsFile>
						</font>
					</fonts>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>tutorial-content</artifactId>
									<version>${project.version}</version>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${basedir}/target/docbook</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.5.2</version>
				<executions>
					<execution>
						<id>install-pdf</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>${basedir}/target/tutorial-complete.pdf</file>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}</artifactId>
							<version>${project.version}</version>
							<packaging>pdf</packaging>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cjcook</groupId>
				<artifactId>pdf-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>concat-pdfs</id>
						<phase>process-classes</phase>
						<goals>
							<goal>concatenate</goal>
						</goals>
						<configuration>
							<outputDir>${basedir}/target</outputDir>
							<outputFilename>tutorial-complete.pdf</outputFilename>
							<pdfs>
								<pdf>${basedir}/target/docbook/covers/cover.pdf</pdf>
								<pdf>${basedir}/src/main/resources/copyright.pdf</pdf>
								<pdf>${basedir}/src/main/resources/innertitle.pdf</pdf>
								<pdf>${basedir}/src/main/resources/blank-page.pdf</pdf>
								<pdf>${basedir}/target/tutorial.pdf</pdf>
								<pdf>${basedir}/src/main/resources/blank-page.pdf</pdf>
							</pdfs>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>tutorial-content</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>publish-external</id>
		</profile>
		<profile>
			<id>stage-external</id>
		</profile>
	</profiles>
</project>
